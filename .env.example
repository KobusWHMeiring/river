# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (PostgreSQL)
# Use DATABASE_URL for a single connection string (preferred)
DATABASE_URL=postgres://river_user:your-db-password-here@localhost:5432/river_db

# Alternatively, you can use individual settings (if settings.py is configured to use them)
DB_NAME=river_db
DB_USER=river_user
DB_PASSWORD=your-db-password-here
DB_HOST=localhost
DB_PORT=5432

# Optional Settings
TIME_ZONE=Africa/Johannesburg
LANGUAGE_CODE=en-us

# Media Files Storage (Production)
# Option 1: Local filesystem (ensure MEDIA_ROOT is on persistent storage)
# MEDIA_ROOT=/var/www/river/media

# Option 2: AWS S3 (Recommended for production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net
# DEFAULT_FILE_STORAGE=storages.backends.s3boto3.S3Boto3Storage

# Option 3: Google Cloud Storage
# GS_BUCKET_NAME=your-bucket-name
# GS_PROJECT_ID=your-project-id
# DEFAULT_FILE_STORAGE=storages.backends.gcloud.GoogleCloudStorage

# Email Settings (for notifications)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-app-password

# Security Headers (Enable in production with HTTPS)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# X_FRAME_OPTIONS=DENY